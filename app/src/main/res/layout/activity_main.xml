<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome to mambuzi"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white"></TextView>

    <Spinner
        android:id="@+id/spinner254"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@string/coffee_array"
        android:prompt="@string/coffee_prompt"
        android:background="@android:color/background_light"
        ></Spinner>
    <Spinner
        android:id="@+id/spinner124"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        ></Spinner>

    <Button
        android:id="@+id/number_0f_cups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="addCups"/>

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cups"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white"/>
    <Button
    android:id="@+id/reduceCups"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="-"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:background="@android:color/holo_blue_bright"
    android:onClick="reduceCups"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="submit order"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:onClick="feedback"/>
    </LinearLayout>
</ScrollView>
